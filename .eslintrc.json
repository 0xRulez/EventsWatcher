{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
        "no-unused-vars": 1,
        "no-multiple-empty-lines": 0,
        "no-trailing-spaces": 1,
        "padded-blocks": 1
    }
}
